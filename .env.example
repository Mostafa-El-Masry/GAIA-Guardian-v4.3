# Environment Variables - TEMPLATE
# Copy this file to .env.local and fill in your values
# See docs/SETUP-SUPABASE.md for detailed setup instructions

# ===== CLOUDFLARE R2 (Media Storage) =====
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_R2_BUCKET=gaia-gallery
CLOUDFLARE_R2_ACCESS_KEY_ID=your-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-secret-access-key
CLOUDFLARE_R2_S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
NEXT_PUBLIC_GAIA_GALLERY_URL=https://your-bucket.r2.dev

# ===== CLOUDFLARE R2 (Video Previews) =====
CLOUDFLARE_R2_PREVIEWS_BUCKET=gaia-previews
CLOUDFLARE_R2_PREVIEWS_ACCESS_KEY_ID=your-previews-access-key
CLOUDFLARE_R2_PREVIEWS_SECRET_ACCESS_KEY=your-previews-secret-key
CLOUDFLARE_R2_PREVIEWS_S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
NEXT_PUBLIC_GAIA_PREVIEWS_URL=https://your-previews-bucket.r2.dev

# ===== SUPABASE (Database & Auth) =====
# Get from: Supabase Dashboard → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Get from: Supabase Dashboard → Settings → API → Service Role (KEEP SECRET)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ===== EXCHANGE RATE API =====
NEXT_PUBLIC_EXCHANGERATE_API_URL=https://api.exchangerate.host
NEXT_PUBLIC_EXCHANGERATE_API_KEY=your-api-key
NEXT_PUBLIC_EXCHANGERATE_SOURCE=KWD
NEXT_PUBLIC_EXCHANGERATE_TARGET=EGP

# ===== RUNTIME =====
NODE_ENV=development
